{
  "name": "studer-raimann.ch/opencast",
  "description": "ILIAS 5.x Opencast plugin",
  "type": "project",
  "keywords": [
    "ILIAS",
    "Plugin",
    "OpenCast"
  ],
  "license": "GPL-3.0+",
  "authors": [
    {
      "name": "Theodor Truffer",
      "email": "tt@studer-raimann.ch",
      "homepage": "https://studer-raimann.ch",
      "role": "Project Manager, Software Engineer"
    }
  ],
  "support": {
    "issues": "https://plugins.studer-raimann.ch/goto.php?target=uihk_srsu_PLOPENCAST"
  },
  "minimum-stability": "beta",
  "prefer-stable": true,
  "require": {
    "php": ">=7.0",
    "elan-ev/opencast-api": "1.4",
    "srag/custominputguis": ">=0.1.0",
    "srag/datatable": ">=0.1.0",
    "srag/dic": ">=0.1.0",
    "srag/librariesnamespacechanger": ">=0.1.0"
  },
  "autoload": {
    "exclude-from-classmap": ["vendor/guzzlehttp/", "vendor/ralouphie/", "vendor/psr/http-message", "vendor/psr/http-factory", "vendor/psr/http-client"],
    "classmap": [
      "./classes/",
      "./src/"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "classmap-authoritative": true
  },
  "scripts": {
    "pre-autoload-dump": [
      "srag\\LibrariesNamespaceChanger\\LibrariesNamespaceChanger::rewriteLibrariesNamespaces",
      "srag\\LibrariesNamespaceChanger\\PHP72Backport::PHP72Backport"
    ]
  },
  "require-dev": {
    "captainhook/captainhook": "^5.10",
    "friendsofphp/php-cs-fixer": "^3.8"
  }
}
